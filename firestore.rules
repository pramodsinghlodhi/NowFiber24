rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'Admin';
    }

    function isTechnician() {
        return isAuth() && getUserData(request.auth.uid).role == 'Technician';
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // Admins can read/write all data
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // USERS collection
    // Allow authenticated users to read any user profile (for name/avatar lookups)
    // Allow users to update their own profile, but not change their role or ID
    match /users/{userId} {
      allow read: if isAuth();
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id && request.resource.data.role == resource.data.role;
    }
    
    // TECHNICIANS collection
    // Any authenticated user can read technician data (for maps, lists)
    // Only admins can write
    match /technicians/{techId} {
        allow read: if isAuth();
        // write is handled by admin rule
    }
    
    // TASKS collection
    // Any authenticated user can read tasks
    // Technicians can only update tasks assigned to them
    match /tasks/{taskId} {
      allow read: if isAuth();
      allow update: if isTechnician() && request.resource.data.tech_id == getUserData(request.auth.uid).id;
       // create/delete is handled by admin rule
    }

    // ALERTS collection
    // Allow authenticated users to read alerts
    match /alerts/{alertId} {
        allow read: if isAuth();
        // create/write is handled by admin rule (and AI flows via service account)
    }

    // INFRASTRUCTURE & CONNECTIONS collections
    // Allow authenticated users to read network data
    match /infrastructure/{infraId} {
        allow read: if isAuth();
    }
    match /connections/{connId} {
        allow read: if isAuth();
    }
    
    // MATERIALS & ASSIGNMENTS collections
    // Allow authenticated users to read materials data
    // Technicians can create new assignments (requests), but not modify them further
    match /materials/{materialId} {
        allow read: if isAuth();
    }
    match /assignments/{assignmentId} {
        allow read: if isAuth();
        allow create: if isTechnician() && request.resource.data.technicianId == getUserData(request.auth.uid).id;
    }

    // REFERRALS collection
    // Authenticated users can read their own referrals
    // Technicians can create new referrals for themselves
    match /referrals/{referralId} {
        allow read: if isTechnician() && resource.data.tech_id == getUserData(request.auth.uid).id;
        allow create: if isTechnician() && request.resource.data.tech_id == getUserData(request.auth.uid).id;
    }

    // PLANS collection
    // Authenticated users can read plans
    match /plans/{planId} {
      allow read: if isAuth();
    }
  }
}
