rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to make rules more readable
    function isAuth() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuth() && getUserData().role == 'Admin';
    }

    function isTechnician() {
      return isAuth() && getUserData().role == 'Technician';
    }
    
    function isOwner(techId) {
      return isTechnician() && getUserData().id == techId;
    }

    // Admins can do anything.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Authenticated users can read their own user profile.
    // Technicians can read other user profiles for names/avatars.
    // No one but an admin can create/delete/update other user profiles.
    match /users/{userId} {
      allow get: if isAuth();
      allow list: if isAuth();
      allow write: if isAdmin();
    }

    // Technicians can read all data needed for their UI (maps, lists, etc.)
    // but have very limited write permissions.
    match /technicians/{techId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isAuth();
      // Allow a technician to update a task if it is assigned to them.
      allow update: if isOwner(resource.data.tech_id);
      allow create, delete: if isAdmin();
    }
    
    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin(); // Or a trusted server/cloud function
    }
    
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /connections/{connId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
        allow read: if isAuth();
        // Allow a technician to create a new assignment (material request)
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }
    
    match /referrals/{referralId} {
        allow read: if isAuth();
        // Allow a technician to create a new referral
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }
    
    match /plans/{planId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
  }
}
