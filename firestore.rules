rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles based on their profile in the /users collection.
    // This is the secure way to perform role-based access control.
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'Admin';
    }

    function isTechnician() {
        return isSignedIn() && getUserData().role == 'Technician';
    }

    // Rules for the 'users' collection.
    // Users can only read their own profile. Admins can read any profile.
    // Only admins can create, update, or delete user profiles.
    match /users/{userId} {
      allow read: if isUser(userId) || isAdmin();
      allow write: if isAdmin();
    }
    
    // Rules for 'notifications' subcollection.
    // A user can only access their own notifications.
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isUser(userId);
    }

    // Rules for 'technicians' collection.
    // All authenticated users can read technician data (needed for maps, tasks, etc.).
    // A technician can update their own document (for location, status updates).
    // Only admins can create or delete technicians.
    match /technicians/{techId} {
        allow read: if isSignedIn();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && techId == getUserData().id);
    }

    // Rules for 'settings' and 'plans'
    // Only admins can read or write these collections.
     match /settings/{docId} {
        allow read, write: if isAdmin();
    }

     match /plans/{planId} {
        allow read, write: if isAdmin();
    }
    
    // Rules for 'contacts'
    // Contact form is public write, but only Admin read/update
     match /contacts/{contactId} {
        allow create;
        allow read, update, delete: if isAdmin();
    }
    
    // Default-allow read for most other business-logic collections.
    // Write access is restricted to Admins. This allows the UI to function for all
    // logged-in users while keeping data modification secure.
    match /{collection}/{docId} {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }
  }
}
