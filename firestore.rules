rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isLoggedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isLoggedIn() && getUserRole() == 'Admin';
    }

    function isTechnician() {
      return isLoggedIn() && getUserRole() == 'Technician';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admins can read and write all data
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Technicians need specific permissions
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow update: if isOwner(userId); // Techs can update their own user doc
    }
    
    match /technicians/{techId} {
      allow read: if isLoggedIn();
      // Allow a technician to update their own document
      allow update: if isTechnician() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id == techId;
    }
    
    match /tasks/{taskId} {
      allow read: if isLoggedIn();
      // Allow a technician to update a task assigned to them
      allow update: if isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    match /referrals/{referralId} {
       allow read: if isLoggedIn();
       // Allow a technician to create their own referral
       allow create: if isTechnician() && request.resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    match /assignments/{assignmentId} {
       allow read: if isLoggedIn();
       // Allow a technician to create their own material request
       allow create: if isTechnician() && request.resource.data.technicianId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    // Read-only for technicians on these collections
    match /alerts/{alertId} {
      allow read: if isLoggedIn();
    }
    match /infrastructure/{infraId} {
      allow read: if isLoggedIn();
    }
    match /connections/{connId} {
      allow read: if isLoggedIn();
    }
    match /materials/{materialId} {
      allow read: if isLoggedIn();
    }
     match /plans/{planId} {
      allow read: if isLoggedIn();
    }
    
  }
}
