
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable and reusable.
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // An Admin user's role is stored in the 'users' collection,
      // linked by their authentication UID.
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isTechnician() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isTechnicianAssignedToTask() {
        let techId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
        return resource.data.tech_id == techId;
    }

    // Admins have full access to everything.
    // This rule provides a blanket override for all collections below.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // The 'users' collection stores roles and profile info.
    // Any authenticated user can read profiles (e.g., to see names).
    // Only the owner of the profile can update their own info. Admins can update any.
    match /users/{userId} {
      allow read: if isAuth();
      allow update: if isOwner(userId);
      // Create/Delete is handled by Admin rule and backend functions.
    }
    
    // Technicians collection contains public info about technicians.
    match /technicians/{techId} {
        allow read: if isAuth();
        // Technicians can't update their own profiles directly from this collection.
        // All technician writes are managed by Admins.
        allow write: if false; // Covered by Admin rule
    }
    
    // Tasks can be read by any authenticated user (as technicians need to see all tasks on some views).
    // Technicians can only update tasks assigned to them.
    match /tasks/{taskId} {
        allow read: if isAuth();
        allow create: if false; // Only Admins can create tasks
        allow update: if isTechnician() && isTechnicianAssignedToTask();
        allow delete: if false; // Only Admins can delete
    }

    // Alerts can be read by any authenticated user.
    // They are created by the AI fault detection flow (server-side), so client writes are disallowed except for Admins.
    match /alerts/{alertId} {
        allow read: if isAuth();
        allow write: if false; // Covered by Admin rule
    }
    
    // All users can read infrastructure data for the map and other displays.
    // Only Admins can modify the infrastructure.
    match /infrastructure/{deviceId} {
        allow read: if isAuth();
        allow write: if false; // Covered by Admin rule
    }

    // All users can read connections for drawing the map.
    // Only Admins can modify connections.
    match /connections/{connId} {
        allow read: if isAuth();
        allow write: if false; // Covered by Admin rule
    }

    // Materials are read-only for technicians.
    // Only Admins can manage the materials stock.
    match /materials/{materialId} {
        allow read: if isAuth();
        allow write: if false; // Covered by Admin rule
    }

    // Assignments can be read by any authenticated user.
    // Technicians can create new requests (assignments).
    // Only Admins can update/approve them.
    match /assignments/{assignmentId} {
        allow read: if isAuth();
        allow create: if isTechnician();
        allow update, delete: if false; // Covered by Admin rule
    }

    // Referrals can be read by any authenticated user.
    // Technicians can create new referrals.
    // Only Admins can update the status of referrals.
    match /referrals/{referralId} {
        allow read: if isAuth();
        allow create: if isTechnician();
        allow update, delete: if false; // Covered by Admin rule
    }

    // Plans can be read by any authenticated user for displaying customer info on the map.
    // Only Admins can modify plans.
    match /plans/{planId} {
        allow read: if isAuth();
        allow write: if false; // Covered by Admin rule
    }
  }
}
