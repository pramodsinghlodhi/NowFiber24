rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is an Admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.isAdmin == true;
    }

    // Helper function to check if the user is a Technician
    // We check for the UID in the users collection to get their ID
    function isTechnician() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getTechnicianId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    // Users:
    // - Admins can read/write any user profile.
    // - Authenticated users can read their own profile.
    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin();
    }

    // Technicians:
    // - Admins can read/write all technician data.
    // - Any authenticated user can read technician data (for maps, task lists etc.)
    // - A technician can update their own document (for location, status).
    match /technicians/{techId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && techId == getTechnicianId());
      allow delete: if isAdmin();
    }

    // Tasks:
    // - Admins can manage all tasks.
    // - Technicians can read all tasks (for context) but only update their own.
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && resource.data.tech_id == getTechnicianId());
      allow delete: if isAdmin();
    }
    
    // Alerts, Inventory, Connections, Materials, Proof of Work
    // - Generally, only Admins should create/delete these records.
    // - All authenticated users should be able to read them for display purposes.
    match /{collection}/{docId}
      where collection in ['alerts', 'infrastructure', 'connections', 'materials', 'proofOfWork', 'plans', 'contacts'] {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Assignments:
    // - Admins can manage all assignments.
    // - Technicians can create new assignments (by requesting materials).
    match /assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }
    
    // Referrals:
    // - Admins can read/update all referrals.
    // - Technicians can create new referrals and read their own.
    match /referrals/{referralId} {
        allow read: if isAuthenticated();
        allow create: if isTechnician();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
    
    // Notifications:
    // - A user can only access their own notifications.
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isOwner(userId);
    }
    
    // Settings:
    // - Only Admins can read or write the settings document.
    match /settings/live {
        allow read, write: if isAdmin();
    }
  }
}
