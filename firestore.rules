
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function isTechnician() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || request.auth.uid == userId; 
    }

    match /technicians/{techId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
        allow update: if isTechnician() && request.auth.uid == get(/databases/$(database)/documents/users/$(request.resource.data.id)).data.uid;
    }
    
    match /tasks/{taskId} {
        allow read: if request.auth != null;
        allow create, write: if isAdmin();
        allow update: if isTechnician();
    }

    match /alerts/{alertId} {
        allow read: if request.auth != null;
        allow create, write: if isAdmin();
    }

    match /infrastructure/{infraId} {
        allow read: if request.auth != null;
        allow create, write: if isAdmin();
    }
    
    match /connections/{connId} {
        allow read: if request.auth != null;
        allow create, write: if isAdmin();
    }
    
    match /materials/{materialId} {
        allow read: if request.auth != null;
        allow create, write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow write: if isAdmin();
    }

    match /referrals/{referralId} {
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow write: if isAdmin();
    }

    match /proofOfWork/{proofId} {
        allow read: if isAdmin();
        allow create: if isTechnician();
    }
  }
}
