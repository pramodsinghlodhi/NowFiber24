rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles from their auth token claims
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    function isTechnician() {
      return request.auth.token.role == 'Technician';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS: Users can read their own profile. Admins can manage all users.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Allow creation during signup, but only admins can update/delete.
      allow create;
      allow update, delete: if isAdmin();
    }

    // TECHNICIANS: All authenticated users can read technician data (for maps, lists). 
    // Only admins or the specific technician can update their own document.
    match /technicians/{techId} {
      allow read: if request.auth != null;
      allow update: if isAdmin() || (isTechnician() && request.resource.data.id == request.auth.token.userId);
      allow create, delete: if isAdmin();
    }

    // SETTINGS: Only admins can read or write the global settings document.
    match /settings/live {
       allow read, write: if isAdmin();
    }

    // NOTIFICATIONS: Users can only access their own notifications subcollection.
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isOwner(userId);
    }

    // All other collections can be read by any authenticated user, but only modified by admins.
    // This allows technicians to see data they need (tasks, alerts, etc.) without having write access.
    match /{collection}/{docId} {
        // This rule applies to: tasks, alerts, infrastructure, connections, 
        // materials, assignments, referrals, proofOfWork, plans
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // More specific write rules for Technicians where needed
    match /assignments/{assignmentId} {
        // Allow technicians to create (request) assignments.
        allow create: if isTechnician();
        allow read: if request.auth != null;
        allow update, delete: if isAdmin();
    }
     match /referrals/{referralId} {
        // Allow technicians to create referrals.
        allow create: if isTechnician();
        allow read: if request.auth != null;
        allow update, delete: if isAdmin();
    }
     match /proofOfWork/{proofId} {
        // Allow technicians to submit proof of work.
        allow create: if isTechnician();
        allow read: if request.auth != null;
        allow delete: if isAdmin();
    }
     match /tasks/{taskId} {
        allow read: if request.auth != null;
        // Admins can create/delete. Technicians can update their own tasks.
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && request.auth.token.userId == resource.data.tech_id);
    }
  }
}
