rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTechnician() {
      return request.auth.token.role == 'Technician';
    }
    
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Settings: Only Admins can read or write the single 'live' settings document.
    match /settings/live {
        allow read, write: if isSignedIn() && isAdmin();
    }
    
    // Users:
    // - Admins can read all user profiles.
    // - Any authenticated user can read their own profile.
    // - Only Admins can create or update user profiles (done via backend).
    match /users/{userId} {
      allow read: if isSignedIn() && (isAdmin() || isOwner(userId));
      allow write: if isSignedIn() && isAdmin();
      
      // Notifications: Users can only access their own notifications.
      match /notifications/{notificationId} {
        allow read, write, create, delete: if isOwner(userId);
      }
    }
    
    // Technicians:
    // - Admins can manage all technician documents.
    // - Authenticated technicians can read all technician data (for maps, etc.)
    // - Technicians can only update their own document (for location, status).
    match /technicians/{techId} {
      allow read: if isSignedIn() && (isAdmin() || isTechnician());
      allow create, delete: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && (isAdmin() || request.auth.token.userId == techId);
    }
    
    // Tasks:
    // - Admins can manage all tasks.
    // - Technicians can read all tasks.
    // - Technicians can only update tasks assigned to them.
    match /tasks/{taskId} {
      allow read: if isSignedIn() && (isAdmin() || isTechnician());
      allow create, delete: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && (isAdmin() || (isTechnician() && resource.data.tech_id == request.auth.token.userId));
    }
    
    // Alerts, Infrastructure, Connections, Materials:
    // - Admins have full access.
    // - Technicians have read-only access.
    match /{collection}/{docId} where collection in ['alerts', 'infrastructure', 'connections', 'materials'] {
      allow read: if isSignedIn() && (isAdmin() || isTechnician());
      allow write: if isSignedIn() && isAdmin();
    }
    
    // Assignments:
    // - Admins have full access.
    // - Technicians can read their own assignments and create new ones (requests).
    match /assignments/{assignmentId} {
      allow read: if isSignedIn() && (isAdmin() || (isTechnician() && resource.data.technicianId == request.auth.token.userId));
      allow create: if isSignedIn() && (isAdmin() || isTechnician());
      allow update, delete: if isSignedIn() && isAdmin();
    }
    
    // Referrals:
    // - Admins have full access.
    // - Technicians can read their own referrals and create new ones.
    match /referrals/{referralId} {
        allow read: if isSignedIn() && (isAdmin() || (isTechnician() && resource.data.tech_id == request.auth.token.userId));
        allow create: if isSignedIn() && (isAdmin() || isTechnician());
        allow update, delete: if isSignedIn() && isAdmin();
    }
    
    // Proof of Work:
    // - Admins have full access.
    // - Technicians can only create new entries for themselves.
    match /proofOfWork/{proofId} {
      allow read: if isSignedIn() && isAdmin();
      allow create: if isSignedIn() && isTechnician() && request.resource.data.technicianId == request.auth.token.userId;
      allow update, delete: if isSignedIn() && isAdmin();
    }
  }
}
