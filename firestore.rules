rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }
    
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isAdmin() {
      return isAuth() && getUserRole(request.auth.uid) == 'Admin';
    }
    
    function isTechnician() {
      return isAuth() && getUserRole(request.auth.uid) == 'Technician';
    }
    
    function getUserId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    function isOwner(techId) {
      return isAuth() && getUserId() == techId;
    }

    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins have full access to everything
    match /{path=**} {
        allow read, write: if isAdmin();
    }
    
    // Allow authenticated users to read their own user profile
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Allow technicians to read data they need for their job
    match /technicians/{techId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }

    match /connections/{connId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if isAuth();
      allow create, delete: if isAdmin();
      // Allow a technician to update a task if it's assigned to them
      allow update: if isAdmin() || (isTechnician() && isOwner(resource.data.tech_id));
    }
    
    match /materials/{materialId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read: if isAuth();
      // Allow technicians to create (request) new assignments
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }
    
    match /referrals/{referralId} {
      allow read: if isAuth();
      // Allow technicians to create new referrals
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }

    match /plans/{planId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
  }
}
