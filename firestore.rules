rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =============================================================
    // Security Helper Functions
    // =============================================================
    function isAuth() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for a custom claim on the user's auth token
      return isAuth() && request.auth.token.isAdmin == true;
    }

    // =============================================================
    // Collection: users
    // Purpose: Stores user profile information (role, name, etc.)
    // =============================================================
    match /users/{userId} {
      // Users can only read their own data.
      allow read: if isUser(userId);
      // Admins can write to any user document. Users can't write their own.
      allow write: if isAdmin();
      
      // A user's notifications are a sub-collection of their user document.
       match /notifications/{notificationId} {
        // Users can read and write to their own notifications.
        allow read, write: if isUser(userId);
      }
    }

    // =============================================================
    // Collection: technicians
    // Purpose: Stores public-facing data for field technicians
    // =============================================================
    match /technicians/{techId} {
      // Any authenticated user can read technician data (for maps, etc.)
      allow read: if isAuth();
      // Only admins can create/delete. Users can update their own location.
      allow create, delete: if isAdmin();
      // Allow a technician to update their own document, or an admin to update any.
      allow update: if isAuth() && (request.auth.token.userId == techId || isAdmin());
    }
    
    // =============================================================
    // Collections: Most other data
    // - Authenticated users can read.
    // - Admins have full write access.
    // =============================================================
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /connections/{connectionId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if isAuth();
      // Admins can write. A technician can update a task assigned to them.
      allow write: if isAdmin() || (isAuth() && request.resource.data.tech_id == request.auth.token.userId);
    }

    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
     match /assignments/{assignmentId} {
      allow read: if isAuth();
       // Admins can write. A technician can create (request) an assignment for themselves.
      allow write: if isAdmin() || (isAuth() && request.resource.data.technicianId == request.auth.token.userId);
    }
    
    match /referrals/{referralId} {
        // Any authenticated user can read referral data.
        allow read: if isAuth();
        // Admins can update status. Technicians can create new referrals.
        allow create: if isAuth();
        allow update, delete: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /proofOfWork/{proofId} {
        allow read, write: if isAuth(); // Admins and technicians can access
    }

    match /plans/{planId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
    
    match /contacts/{contactId} {
        // Only admins can read/write contact form submissions
        allow read, write: if isAdmin();
    }
  }
}