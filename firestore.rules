rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has the 'Admin' role
    function isAdmin() {
      return getUserData(request.auth.uid).role == 'Admin';
    }

    // Helper function to check if a user is a 'Technician'
    function isTechnician() {
      return getUserData(request.auth.uid).role == 'Technician';
    }
    
    // Helper function to get user data from the 'users' collection
    function getUserData(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    // Helper function to check if the user is the owner of the resource
    function isOwner(resourceId) {
        return request.auth.uid == resourceId;
    }

    // Users can read their own data. Admins can read/write all user data.
    match /users/{userId} {
      allow read: if request.auth != null && (isOwner(userId) || isAdmin());
      allow write: if isAdmin();
      allow create: if isAdmin();
    }

    // Technicians can read their own data and update specific fields (location, status).
    // Admins can read/write all technician data.
    match /technicians/{techId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && request.resource.data.id == techId);
      allow delete: if isAdmin();
    }
    
    // Admins have full access. Technicians have read-only access.
    match /infrastructure/{deviceId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Admins have full access. Technicians can update task status and their own assigned tasks.
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && request.resource.data.tech_id == getUserData(request.auth.uid).id);
      allow delete: if isAdmin();
    }

    // Alerts are read-only for technicians, full access for admins.
    match /alerts/{alertId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Connections are read-only for technicians, full access for admins.
    match /connections/{connectionId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Materials can only be read by authenticated users. Only admins can modify.
    match /materials/{materialId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Assignments can be created by technicians. Status updates are for admins.
    match /assignments/{assignmentId} {
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    // Referrals can be created by technicians. Admins can manage them.
    match /referrals/{referralId} {
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
    
     // Plans can only be read by authenticated users. Only admins can modify.
    match /plans/{planId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

  }
}
