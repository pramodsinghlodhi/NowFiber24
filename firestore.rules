
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    function isAuthOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isAuth() && request.auth.token.isAdmin == true;
    }
    function isTechnician() {
        return isAuth() && request.auth.token.role == 'Technician';
    }

    // Users: Can only be read/written by the owner or an admin.
    match /users/{userId} {
      allow read, write: if isAuthOwner(userId) || isAdmin();
    }

    // Technicians: Readable by any authenticated user, writable only by admin.
    match /technicians/{techId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // Tasks: Readable by any authenticated user, but can only be queried by Admins. Writable only by admin.
    match /tasks/{taskId} {
      allow get: if isAuth();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Alerts, Infrastructure, Connections: Readable by authenticated users, writable by admin.
    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
     match /connections/{connectionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Materials & Assignments: Readable by authenticated users, but can only be queried by Admins. Writable only by admin.
    match /materials/{materialId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
     match /assignments/{assignmentId} {
        allow get: if isAuth();
        allow list: if isAdmin();
        allow write: if isAdmin();
    }

    // Referrals & Proof of Work: Only accessible by their respective roles.
    match /referrals/{referralId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
     match /proofOfWork/{proofId} {
        allow read, write: if isAdmin();
     }
     match /contacts/{contactId} {
        allow read, write: if isAdmin();
     }

    // User-specific subcollections like notifications
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isAuthOwner(userId);
    }
    
    // Settings: Admin only
    match /settings/live {
        allow read, write: if isAdmin();
    }

    // Plans: Admin only for now
    match /plans/{planId} {
        allow read, write: if isAdmin();
    }
  }
}
