rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      return isLoggedIn() && getUserData(request.auth.uid).role == role;
    }

    function isAdmin() {
      return isRole('Admin');
    }

    function isTechnician() {
      return isRole('Technician');
    }

    // Admins can do anything.
    // This rule being at the top level for each collection ensures it's checked first.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users Collection: 
    // - Admins can manage all users (covered by global rule).
    // - Logged-in users can read other user profiles (e.g., to see names).
    // - Logged-in users can update their own profile.
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow update: if isLoggedIn() && request.auth.uid == userId;
      // Create and delete are admin-only operations handled by the global rule.
    }

    // Technicians Collection:
    // - Admins can manage all technicians (covered by global rule).
    // - All logged-in users can read technician data (for maps, task assignments).
    // - Technicians can update their own document (e.g., for location, status).
    match /technicians/{techId} {
      allow read: if isLoggedIn();
      // A user can update a technician document if they are an admin OR if the techId matches their own custom ID.
      allow update: if isLoggedIn() && (getUserData(request.auth.uid).id == techId);
       // Create and delete are admin-only operations handled by the global rule.
    }

    // Tasks Collection:
    // - Admins can manage all tasks (covered by global rule).
    // - Technicians can read all tasks.
    // - Technicians can only update tasks that are assigned to them.
    match /tasks/{taskId} {
      allow read: if isLoggedIn();
      allow update: if isTechnician() && resource.data.tech_id == getUserData(request.auth.uid).id;
      // Create is admin-only.
    }
    
    // Alerts, Infrastructure, Connections, Plans can be read by any logged-in user.
    // Write access is admin-only.
    match /alerts/{alertId} {
      allow read: if isLoggedIn();
    }
    match /infrastructure/{infraId} {
      allow read: if isLoggedIn();
    }
    match /connections/{connId} {
        allow read: if isLoggedIn();
    }
    match /plans/{planId} {
        allow read: if isLoggedIn();
    }

    // Materials can be read by any logged-in user.
    // Write access is admin-only.
    match /materials/{materialId} {
        allow read: if isLoggedIn();
    }
    
    // Assignments (Material Requests/Issues):
    // - Admins can manage all assignments (covered by global rule).
    // - Technicians can read their own assignments.
    // - Technicians can create new assignments (requests).
    match /assignments/{assignmentId} {
      allow read: if isTechnician() && getUserData(request.auth.uid).id == resource.data.technicianId;
      allow create: if isTechnician();
      // Updates (approving, issuing) are admin-only.
    }
    
    // Referrals:
    // - Admins can read all referrals (covered by global rule).
    // - Technicians can read their own referrals.
    // - Technicians can create new referrals.
    match /referrals/{referralId} {
        allow read: if isTechnician() && getUserData(request.auth.uid).id == resource.data.tech_id;
        allow create: if isTechnician();
        // Updates (changing status) are admin-only.
    }
  }
}
