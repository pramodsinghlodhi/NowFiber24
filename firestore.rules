
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return getRole() == 'Admin';
    }
    
    function isTechnician() {
        return getRole() == 'Technician';
    }

    // Admins have full access to all collections
    // Technicians can read most collections
    // Technicians can create specific documents (referrals, material requests, proof of work)
    // Technicians can only update their own documents or tasks assigned to them

    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /users/{userId} {
        allow read: if isSignedIn();
        allow update: if isUser(userId) || isAdmin(); // Allow user to update their own info, or admin
    }
    
    match /technicians/{techId} {
        allow read: if isSignedIn();
        // Allow update only if the user is the technician themselves (for location tracking) or an admin
        allow update: if (isTechnician() && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid) || isAdmin();
    }
    
    match /tasks/{taskId} {
        allow read: if isSignedIn();
        allow create: if isAdmin();
        // Allow update only if the user is the assigned technician or an admin
        allow update: if (isTechnician() && request.resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id) || isAdmin();
    }
    
    match /alerts/{alertId} {
        allow read: if isSignedIn();
        allow create: if isAdmin(); // Only system/admin can create alerts
    }

    match /infrastructure/{infraId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }
    
    match /connections/{connId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    match /materials/{materialId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    match /assignments/{assignmentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn(); // Techs can create requests, admins can create assignments
        allow update, delete: if isAdmin();
    }

    match /referrals/{referralId} {
        allow read: if isSignedIn();
        allow create: if isTechnician();
        allow update: if isAdmin();
    }

    match /proofOfWork/{proofId} {
        allow read: if isAdmin();
        allow create: if isTechnician();
    }
    
    match /plans/{planId} {
        allow read: if isAdmin();
    }
  }
}
