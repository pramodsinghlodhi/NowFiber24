rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and authentication status.
    // These make the rules below easier to read and maintain.
    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isLoggedIn() && getUserData(request.auth.uid).role == 'Admin';
    }

    function isTechnician() {
      return isLoggedIn() && getUserData(request.auth.uid).role == 'Technician';
    }
    
    function isOwner(techId) {
        return request.auth.uid == techId;
    }
    
    function isAssignedTech(techId) {
      return getUserData(request.auth.uid).id == techId;
    }

    // Admins can do anything.
    // Technicians can read their own profile, and see other users' basic info.
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }
    
    // Technicians: Can read all technician data (for maps/lists), but can only update their own status/location.
    // Admins: Can do anything.
    match /technicians/{techId} {
        allow read: if isLoggedIn();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || isAssignedTech(techId);
    }
    
    // Technicians: Can read all tasks, but can only update tasks assigned to them.
    // Admins: Can do anything.
    match /tasks/{taskId} {
        allow read: if isLoggedIn();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && isAssignedTech(resource.data.tech_id));
    }
    
    // Alerts: Read-only for all logged-in users. Only Admins can create/delete.
    // The auto-fault-detection flow would run with admin privileges.
    match /alerts/{alertId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    // Inventory: Read-only for technicians. Full access for Admins.
    match /infrastructure/{deviceId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    // Connections: Read-only for technicians. Full access for Admins.
    match /connections/{connectionId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    // Materials: Read-only for all logged-in users. Full access for Admins.
    match /materials/{materialId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    // Assignments: 
    // - Technicians can create their own requests.
    // - Technicians can read their own assignments.
    // - Admins can read all and update/delete any.
    match /assignments/{assignmentId} {
        allow read: if isAdmin() || (isTechnician() && isAssignedTech(resource.data.technicianId));
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }
    
    // Referrals:
    // - Technicians can create their own referrals.
    // - Technicians can read their own referrals.
    // - Admins can read all and update/delete any.
    match /referrals/{referralId} {
      allow read: if isAdmin() || (isTechnician() && isAssignedTech(resource.data.tech_id));
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }

    // Plans: Read-only for technicians. Full access for Admins.
    match /plans/{planId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
  }
}
