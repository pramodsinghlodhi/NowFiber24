
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    function isTechnician() {
        return request.auth.token.role == 'Technician';
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    function isAssignedTechnician(techId) {
       return request.auth.uid == techId;
    }

    // Users can read their own profile. Admins can read/write all profiles.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isAdmin(); // Only admins can create new user profiles via backend
      allow delete: if isAdmin();
    }

    // Technicians can read their own data. Admins can read/write all.
    match /technicians/{techId} {
      allow read; // All authenticated users can read technician info for display purposes
      allow create, update, delete: if isAdmin();
    }

    // Admins can manage all tasks. Technicians can read their own tasks and update status.
    match /tasks/{taskId} {
      allow read: if isAdmin() || isAssignedTechnician(resource.data.tech_id);
      allow create: if isAdmin();
      allow update: if isAdmin() || isAssignedTechnician(resource.data.tech_id);
      allow list: if isAdmin() || (isTechnician() && request.query.where[0].value == request.auth.uid);
    }
    
    // Infrastructure, connections and plans are public read for map/tracing functionality. Admins can manage.
    match /infrastructure/{deviceId} {
      allow read;
      allow create, update, delete: if isAdmin();
    }
    
    match /connections/{connId} {
      allow read;
      allow create, update, delete: if isAdmin();
    }

    match /plans/{planId} {
       allow read;
       allow create, update, delete: if isAdmin();
    }

    // Alerts are readable by everyone, managed by Admins.
    match /alerts/{alertId} {
      allow read;
      allow create, update, delete: if isAdmin();
    }

    // Materials can be read by all, managed by Admins.
    match /materials/{materialId} {
      allow read;
      allow create, update, delete: if isAdmin();
    }
    
    // Technicians can create assignments (requests). Admins can manage all assignments.
    // Technicians can read their own assignments.
    match /assignments/{assignmentId} {
      allow create: if isTechnician();
      allow read: if isAdmin() || isAssignedTechnician(resource.data.technicianId);
      allow update, delete: if isAdmin();
       allow list: if isAdmin() || (isTechnician() && request.query.where[0].value == request.auth.token.userId);
    }
    
    // Technicians can create referrals. Admins can manage all.
    match /referrals/{referralId} {
        allow create: if isTechnician();
        allow read: if isAdmin() || isAssignedTechnician(resource.data.tech_id);
        allow update, delete: if isAdmin();
        allow list: if isAdmin() || (isTechnician() && request.query.where[0].value == request.auth.uid);
    }

    // Anyone can create contact submissions. Only Admins can read/manage.
    match /contacts/{contactId} {
      allow create;
      allow read, update, delete: if isAdmin();
    }
    
    // Admins can manage settings.
    match /settings/live {
       allow read, write: if isAdmin();
    }

    // Technicians can create proof of work. Admins can manage all.
    match /proofOfWork/{proofId} {
        allow create: if isTechnician();
        allow read, delete: if isAdmin();
    }

    // Notifications are private to each user.
    match /users/{userId}/notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId);
    }
  }
}
