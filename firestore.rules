rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isUserAdmin() {
      return request.auth.token.isAdmin == true || isUserRole('Admin');
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Admins can read/write any user profile
      // Users can read/write their own profile
      allow read, write: if isUserAdmin() || isOwner(userId);
    }
    
    match /users/{userId}/notifications/{notificationId} {
        // Users can read/write their own notifications
        // Admins can create broadcasts (write to any user's notifications)
        allow read, write: if isOwner(userId) || isUserAdmin();
    }
    
    match /technicians/{techId} {
        // Admins can read/write all technician data
        // Authenticated technicians can update their own data (for location, status)
        allow read: if isUserAuthenticated();
        allow write: if isUserAdmin() || (isUserRole('Technician') && resource.id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
    }

    match /tasks/{taskId} {
        // Admins can read/write all tasks
        // Technicians can read all tasks, but only write to tasks assigned to them.
        allow read: if isUserAuthenticated();
        allow write: if isUserAdmin();
        allow update: if isUserRole('Technician') && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    match /referrals/{referralId} {
        allow read: if isUserAuthenticated();
        // Admins can manage all referrals
        // Technicians can create new referrals
        allow write: if isUserAdmin();
        allow create: if isUserRole('Technician');
    }

    match /assignments/{assignmentId} {
      // Admins can manage all assignments
      // Technicians can create new assignments (requests)
      allow read: if isUserAuthenticated();
      allow write: if isUserAdmin();
      allow create: if isUserRole('Technician');
    }

    match /proofOfWork/{proofId} {
      // Admins can read/delete all proofs
      // Technicians can create new proofs
      allow read, delete: if isUserAdmin();
      allow create: if isUserRole('Technician');
    }
    
    match /settings/{docId} {
      // Only admins can read/write settings
      allow read, write: if isUserAdmin();
    }

    // Default deny for all other collections unless explicitly stated
    match /{document=**} {
      allow read, write: if isUserAdmin();
    }
  }
}
