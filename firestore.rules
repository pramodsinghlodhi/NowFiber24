
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions to check user roles and ownership.
    // These make the rules cleaner and easier to understand.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'Admin';
    }

    function isTechnician() {
      return isSignedIn() && getUserData().role == 'Technician';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Collection-Specific Rules ---

    // USERS Collection:
    // - Users can read and update their OWN profile.
    // - Admins can create, read, update, and delete ANY user profile.
    match /users/{userId} {
      allow read, update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow create, delete: if isAdmin();
    }

    // TECHNICIANS Collection:
    // - Admins can manage all technicians.
    // - Technicians can read all technician data (for maps, etc.).
    // - Technicians can only update THEIR OWN data.
    match /technicians/{techId} {
      allow read: if isSignedIn() && (isTechnician() || isAdmin());
      allow update: if (isSignedIn() && isTechnician() && getUserData().id == techId) || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    // TASKS Collection:
    // - Admins can manage all tasks.
    // - Technicians can read all tasks.
    // - Technicians can only update tasks assigned to them.
    match /tasks/{taskId} {
      allow read: if isSignedIn() && (isTechnician() || isAdmin());
      allow update: if (isSignedIn() && isTechnician() && request.resource.data.tech_id == getUserData().id) || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    // ALERTS Collection:
    // - Admins can manage all alerts.
    // - Technicians can read all alerts.
    match /alerts/{alertId} {
      allow read: if isSignedIn() && (isTechnician() || isAdmin());
      allow create, update, delete: if isAdmin();
    }
    
    // INVENTORY (INFRASTRUCTURE) Collection:
    // - Admins can manage all infrastructure.
    // - Technicians can read all infrastructure data.
    match /infrastructure/{deviceId} {
      allow read: if isSignedIn() && (isTechnician() || isAdmin());
      allow create, update, delete: if isAdmin();
    }

    // CONNECTIONS Collection:
    // - Admins can manage all connections.
    // - Technicians can read all connections.
    match /connections/{connectionId} {
       allow read: if isSignedIn() && (isTechnician() || isAdmin());
       allow create, update, delete: if isAdmin();
    }
    
    // MATERIALS Collection:
    // - Admins can manage all materials.
    // - Technicians can read all materials (to make requests).
    match /materials/{materialId} {
       allow read: if isSignedIn() && (isTechnician() || isAdmin());
       allow create, update, delete: if isAdmin();
    }
    
    // ASSIGNMENTS (Material Assignments) Collection:
    // - Admins can manage all assignments.
    // - Technicians can create their own requests.
    // - Technicians can read assignments related to them.
    match /assignments/{assignmentId} {
      allow read: if isSignedIn() && (isAdmin() || resource.data.technicianId == getUserData().id);
      allow create: if isSignedIn() && (isAdmin() || request.resource.data.technicianId == getUserData().id);
      allow update, delete: if isAdmin();
    }
    
    // REFERRALS Collection:
    // - Admins can read and update all referrals.
    // - Technicians can create referrals for themselves.
    // - Technicians can read referrals submitted by them.
    match /referrals/{referralId} {
      allow read: if isSignedIn() && (isAdmin() || resource.data.tech_id == getUserData().id);
      allow update: if isAdmin();
      allow create: if isSignedIn() && (isAdmin() || request.resource.data.tech_id == getUserData().id);
      allow delete: if isAdmin();
    }

    // PLANS Collection:
    // - Admins can manage all plans.
    // - Technicians can read all plans.
    match /plans/{planId} {
      allow read: if isSignedIn() && (isTechnician() || isAdmin());
      allow create, update, delete: if isAdmin();
    }
  }
}
