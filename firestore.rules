
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check for the custom claim set on the user's token
      return request.auth.token.isAdmin == true;
    }
    
    // Users can only read their own user profile document. Admins can read any.
    // Admins can write to any user document (e.g., for blocking).
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();

      // Notifications subcollection
      // A user can read, write, list, and delete notifications within their own profile.
      match /notifications/{notificationId} {
        allow get, write: if request.auth.uid == userId;
        allow list, delete: if request.auth.uid == userId || isAdmin();
      }
    }

    // Technicians collection is readable by any authenticated user for UI purposes.
    // Only Admins (via server) can create, update, or delete technician records.
    match /technicians/{techId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // Tasks: Readable by any authenticated user. Writable only by admin.
    // Admins can query the list of tasks.
    match /tasks/{taskId} {
      allow read: if isAuth();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Alerts: Readable by any authenticated user. Writable only by admin.
    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Infrastructure: Readable by any authenticated user. Writable only by admin.
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Connections: Readable by any authenticated user. Writable only by admin.
    match /connections/{connectionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Materials: Readable by any authenticated user. Writable only by admin.
    match /materials/{materialId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Assignments: Readable by any authenticated user. Writable only by admin.
    // Admins can query the list of assignments.
    match /assignments/{assignmentId} {
        allow read: if isAuth();
        allow list: if isAdmin();
        allow write: if isAdmin();
    }
    
    // Referrals: Readable by any authenticated user. Writable by admin or the referring tech.
    match /referrals/{referralId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAdmin() || request.resource.data.tech_id == request.auth.uid;
    }

    // Proof of Work: Writable by any authenticated user, readable only by admin
    match /proofOfWork/{proofId} {
        allow create: if isAuth();
        allow read, delete: if isAdmin();
    }
    
    // Settings are only readable and writable by admins
    match /settings/live {
      allow read, write: if isAdmin();
    }

    // Contact submissions can be created by anyone, but only read/managed by Admins
    match /contacts/{contactId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
  }
}
