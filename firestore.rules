
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role via custom claims
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Allow authenticated users to read their own user document
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
    }

    // Technicians can read most collections
    match /technicians/{docId} {
      allow read: if request.auth != null;
    }
    match /tasks/{docId} {
      allow read, write: if request.auth != null;
    }
    match /infrastructure/{docId} {
      allow read: if request.auth != null;
    }
    match /connections/{docId} {
        allow read: if request.auth != null;
    }
    match /alerts/{docId} {
      allow read: if request.auth != null;
    }
    match /materials/{docId} {
        allow read: if request.auth != null;
    }
    match /assignments/{docId} {
        allow read: if request.auth != null;
    }
    
    // Technicians can create referrals and update their own technician document
    match /referrals/{docId} {
        allow create: if request.auth != null;
    }
    
    match /technicians/{techId} {
      allow update: if request.auth.uid != null && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid;
    }
  }
}
