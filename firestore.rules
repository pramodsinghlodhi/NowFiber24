rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to get the role of the current user
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Admins can manage all user profiles.
      // A user can read their own profile.
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin();
    }

    // Technicians collection rules
    match /technicians/{techId} {
      // Admins can manage all technician profiles.
      // Technicians can read all profiles (for context) and update their own.
      allow read: if isAdmin() || getRole() == 'Technician';
      allow write: if isAdmin();
      allow update: if getRole() == 'Technician' && techId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }

    // Tasks collection rules
    match /tasks/{taskId} {
      // Admins can manage all tasks.
      // Technicians can read all tasks, and update tasks assigned to them.
      allow read: if isAdmin() || getRole() == 'Technician';
      allow write: if isAdmin();
      allow update: if getRole() == 'Technician' && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }

    // Alerts, Infrastructure, Connections, Materials, Plans can be read by all authenticated users
    // Only Admins can create, update, or delete.
    match /{collection}/{docId} 
        where collection in ['alerts', 'infrastructure', 'connections', 'materials', 'plans'] {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Assignments (Material Requests/Issuances)
    match /assignments/{assignmentId} {
        // Admins can manage all assignments.
        // Technicians can read their own assignments and create new ones (request).
        allow read: if isAdmin() || (getRole() == 'Technician' && resource.data.technicianId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
        allow create: if isAdmin() || getRole() == 'Technician';
        allow update, delete: if isAdmin();
    }
    
    // Referrals
    match /referrals/{referralId} {
        // Admins can manage all referrals.
        // Technicians can read their own referrals and create new ones.
        allow read: if isAdmin() || (getRole() == 'Technician' && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
        allow create: if getRole() == 'Technician';
        allow update, delete: if isAdmin();
    }
  }
}
