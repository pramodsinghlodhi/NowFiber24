
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }
    
    // Checks for a custom claim on the user's auth token.
    // This is set server-side and is the most reliable way to check for roles.
    function isAdmin() {
      return isAuth() && request.auth.token.role == 'Admin';
    }

    // --- Collection Rules ---

    // Users can only read their own profile. Admins can read any profile.
    // Only Admins can create/update/delete users (handled by server-side actions).
    match /users/{userId} {
      allow read: if isUser(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Notifications are private to each user.
    match /users/{userId}/notifications/{notificationId} {
      allow read, write, delete: if isUser(userId);
      // This allows the "clear all" functionality to work by querying the collection.
      allow list: if isUser(userId);
    }
    
    // Admins have full access to technicians. Authenticated users can read.
    match /technicians/{techId} {
      allow read: if isAuth();
      allow list, write: if isAdmin();
    }

    // Admins have full access to infrastructure. Authenticated users can read.
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow list, write: if isAdmin();
    }

    // Admins have full access to tasks. Authenticated users can read/query.
    match /tasks/{taskId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }

    // Admins have full access to alerts. Authenticated users can read/query.
    match /alerts/{alertId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }
    
    // Admins have full access to material assignments. Techs can read their own.
    match /assignments/{assignmentId} {
      allow get: if isAuth();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    // Admins have full access to materials. Authenticated users can read.
    match /materials/{materialId} {
      allow read: if isAuth();
      allow list, write: if isAdmin();
    }

    // Referrals can be created by any authenticated user (technicians).
    // Only Admins can read the full list or update/delete them.
    match /referrals/{referralId} {
        allow read, list: if isAdmin();
        allow create: if isAuth();
        allow update, delete: if isAdmin();
    }
    
    // Proof of Work can be created by any authenticated user.
    // Only Admins can read/delete them.
    match /proofOfWork/{proofId} {
        allow read, list: if isAdmin();
        allow create: if isAuth();
        allow delete: if isAdmin();
    }

    // Contact submissions can be created by anyone.
    // Only Admins can read/update/delete them.
    match /contacts/{contactId} {
        allow read, list, update, delete: if isAdmin();
        allow create: if true;
    }

    // Plans are admin-only.
    match /plans/{planId} {
        allow read, list, write: if isAdmin();
    }

    // Connections are admin-only for now, but readable by all for map tracing.
    match /connections/{connectionId} {
        allow read: if isAuth();
        allow list, write: if isAdmin();
    }

    // Settings are admin-only.
    match /settings/live {
        allow read, write: if isAdmin();
    }
  }
}
