
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Gets the user's role from their custom claims.
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isTechnician() {
        return getUserRole() == 'Technician';
    }
    
    function isAdmin() {
        return getUserRole() == 'Admin';
    }
    
    // Checks if the requesting user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // =================================
    // Collections
    // =================================

    match /users/{userId} {
      // Admins can read/write any user profile.
      // Users can only read/write their own profile.
      allow read, write: if isAdmin() || isOwner(userId);
    }
    
    match /technicians/{techId} {
        // Admins can manage technicians.
        // Authenticated users (including the tech themselves) can read technician profiles.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
        // Admins can manage all tasks.
        // Technicians can read all tasks (to see team workload) but can only update
        // a task if it's assigned to them.
        allow read: if request.auth != null;
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && resource.data.tech_id == request.auth.uid);
    }
    
    match /alerts/{alertId} {
        // All authenticated users can read alerts.
        // Only admins can create or modify them.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /infrastructure/{deviceId} {
        // Any authenticated user can read infrastructure data for map display.
        // Only admins can modify the inventory.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /connections/{connectionId} {
        // Any authenticated user can read connection data for map display.
        // Only admins can modify connections.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
        // Admins can manage the materials stock.
        // Technicians can read the list of available materials.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
        // Admins can manage all assignments.
        // Technicians can create new assignments (requests) and view their own.
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }

    match /referrals/{referralId} {
        // Admins can read all referrals.
        // Technicians can create new referrals and read their own.
        allow read: if isAdmin() || (isTechnician() && resource.data.tech_id == request.auth.uid);
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }
    
    match /proofOfWork/{proofId} {
        // Admins can read/delete all proof of work.
        // Technicians can create new proof of work and read their own.
        allow read: if isAdmin() || (isTechnician() && resource.data.technicianId == request.auth.uid);
        allow create: if isTechnician();
        allow delete: if isAdmin();
    }
    
    match /contacts/{contactId} {
        // Public can write (submit form).
        // Only Admins can read/update/delete.
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }

    match /settings/live {
        // Only admins can read/write the global settings document.
        allow read, write: if isAdmin();
    }
    
    match /plans/{planId} {
      // Only admins can manage service plans.
      allow read, write: if isAdmin();
    }
  }
}
