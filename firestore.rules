rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================================================
    // Helper Functions
    // =================================================================
    
    // Check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get the user's role from their profile in the 'users' collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Check if the user is an Admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'Admin';
    }
    
    // Check if the user is a Technician
    function isTechnician() {
      return isAuthenticated() && getUserRole() == 'Technician';
    }

    // Check if the user is the assigned technician for a resource
    // (e.g., a task or an assignment)
    function isAssignedTechnician(resource) {
        return isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // =================================================================
    // Collection-specific Rules
    // =================================================================

    // Users Collection
    // Admins can read/write any user.
    // Users can only read/update their own profile.
    match /users/{userId} {
      allow read, update: if isAdmin() || isOwner(userId);
      allow create, delete: if isAdmin();
    }
    
    // Technicians Collection
    // Admins can manage all technician data.
    // Technicians can update their own data (e.g., location, status).
    match /technicians/{techId} {
        allow read: if isAuthenticated();
        allow update: if isAdmin() || (isTechnician() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id == techId);
        allow create, delete: if isAdmin();
    }
    
    // Tasks Collection
    // Admins can manage all tasks.
    // Technicians can read all tasks and update tasks assigned to them.
    match /tasks/{taskId} {
        allow read: if isAuthenticated();
        allow update: if isAdmin() || isAssignedTechnician(resource);
        allow create, delete: if isAdmin();
    }

    // Proof of Work Collection
    // Admins can read all proofs.
    // Technicians can create new proofs.
    match /proofOfWork/{proofId} {
        allow read: if isAdmin();
        allow create: if isTechnician();
        // No updates or deletes allowed for data integrity
        allow update, delete: if false;
    }
    
    // Assignments Collection (Material Requests/Issues)
    // Admins can manage all assignments.
    // Technicians can create new requests (assignments) and read their own.
    match /assignments/{assignmentId} {
      allow read, update, delete: if isAdmin();
      allow create: if isTechnician();
    }
    
    // Referrals Collection
    // Admins can manage all referrals.
    // Technicians can create new referrals and read their own.
     match /referrals/{referralId} {
      allow read, update: if isAdmin() || isAssignedTechnician(resource);
      allow create: if isTechnician();
      allow delete: if isAdmin();
    }

    // Default deny for all other collections unless explicitly allowed
    // Admins get full access to all other collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
