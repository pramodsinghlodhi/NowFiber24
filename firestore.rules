
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to improve readability
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'Admin';
    }

    function isTechnician() {
      return isSignedIn() && getUserData().role == 'Technician';
    }

    // Admins have full access to everything. This is a simple, powerful rule.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // Any signed-in user can read their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Admins can create/update/delete any user profile
      allow write: if isAdmin();
    }
    
    // Technicians need to read from many collections to do their job
    match /technicians/{techId} {
       // Technicians can read all technician data (for maps, etc.)
      allow read: if isTechnician();
      // A technician can ONLY update their own document
      allow update: if isTechnician() && request.auth.uid == getUserData().uid && techId == getUserData().id;
    }

    match /tasks/{taskId} {
      allow read: if isTechnician();
      // A technician can only update a task assigned to them
      allow update: if isTechnician() && get(/databases/$(database)/documents/tasks/$(taskId)).data.tech_id == getUserData().id;
    }

    match /alerts/{alertId} {
      allow read: if isTechnician();
    }
    
    match /infrastructure/{deviceId} {
       allow read: if isTechnician();
    }

    match /connections/{connId} {
       allow read: if isTechnician();
    }
    
    match /materials/{materialId} {
        allow read: if isTechnician();
    }

    match /assignments/{assignmentId} {
        // Technicians can create new material requests
        allow create: if isTechnician();
        // Technicians can read their own assignments
        allow read: if isTechnician() && resource.data.technicianId == getUserData().id;
    }
    
    match /referrals/{referralId} {
        // Technicians can create new referrals
        allow create: if isTechnician();
        // Technicians can read their own referrals
        allow read: if isTechnician() && resource.data.tech_id == getUserData().id;
    }
    
    match /proofOfWork/{proofId} {
        // Technicians can create new proof of work submissions
        allow create: if isTechnician();
    }

    // Fallback security rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
