rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isLoggedIn() && getUserData().role == 'Admin';
    }

    function isTechnician() {
      return isLoggedIn() && getUserData().role == 'Technician';
    }

    // Admins have full read/write access to everything.
    // This is the simplest, most robust way to ensure admins are never blocked.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Technicians can read most data, but have limited write access.
    match /technicians/{techId} {
        allow read: if isLoggedIn();
        // A technician can update their own document (e.g., for location, status)
        allow update: if isTechnician() && getUserData().id == techId;
    }

    match /users/{userId} {
        // A user can update their own user document
        allow update: if request.auth.uid == userId;
    }

    match /tasks/{taskId} {
        allow read: if isLoggedIn();
        // A technician can update a task assigned to them
        allow update: if isTechnician() && request.resource.data.tech_id == getUserData().id;
    }

    match /assignments/{assignmentId} {
        // Technicians can create assignments (requests)
        allow create: if isTechnician();
        allow read: if isLoggedIn();
    }

    match /referrals/{referralId} {
        // Technicians can create referrals
        allow create: if isTechnician();
        allow read: if isLoggedIn();
    }

    // Read-only collections for technicians
    match /materials/{materialId} {
        allow read: if isLoggedIn();
    }
    match /infrastructure/{infraId} {
        allow read: if isLoggedIn();
    }
    match /connections/{connId} {
        allow read: if isLoggedIn();
    }
    match /alerts/{alertId} {
        allow read: if isLoggedIn();
    }
     match /plans/{planId} {
        allow read: if isLoggedIn();
    }
  }
}
