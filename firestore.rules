rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admin can do anything
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }
    
    // Users can read their own user profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if isAdmin(); // Only admins can write to user profiles
    }
    
    // Technicians can update their own status and location if their UID matches.
    match /technicians/{techId} {
        allow read: if request.auth != null; // Any authenticated user can read technician data
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id == techId;
        allow write: if isAdmin(); // Admins can create/delete
    }

    match /referrals/{referralId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdmin();
    }

    // Default read access for authenticated users to other collections.
    match /{collection}/{docId} {
      allow read: if request.auth != null;
    }
    
    // Default write access for admins to any document.
    match /{document=**} {
      allow write: if isAdmin();
    }
  }
}
