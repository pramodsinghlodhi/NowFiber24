
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserAdmin() {
      return isUserAuthenticated() && request.auth.token.isAdmin == true;
    }

    function isUserTechnician(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // Public access for contact form submissions
    match /contacts/{contactId} {
        allow create: if true;
        allow read, update, delete: if isUserAdmin();
    }
    
    // Rules for all other collections
    match /{path=**}/documents/{documentId} {
       allow read, write: if isUserAdmin();
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
