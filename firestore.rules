
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user roles
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isTechnician() {
        return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Admins have full access to everything. This is the simplest, most reliable rule.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read their own profile
      allow get: if isAuth() && isOwner(userId);
      // Technicians can't create users, only admins (covered by the rule above)
      // Admins can update any user profile (covered by the rule above)
      allow list: if isAdmin();
    }

    // Rules for Technicians data
    match /technicians/{techId} {
        // Technicians can read all technician data (for maps, etc.)
        allow read: if isTechnician();
        // Technicians can update their OWN document (for location, status, etc.)
        allow update: if isTechnician() && techId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }

    // Rules for Tasks
    match /tasks/{taskId} {
        allow read: if isTechnician();
        // A tech can update a task if it's assigned to them.
        allow update: if isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }

    // Rules for Referrals
    match /referrals/{referralId} {
        allow read: if isTechnician();
        // A tech can create a referral.
        allow create: if isTechnician();
    }
    
    // Rules for Material Assignments
    match /assignments/{assignmentId} {
      allow read: if isTechnician();
      // Techs can create new requests
      allow create: if isTechnician();
    }

    // Rules for Proof of Work
    match /proofOfWork/{proofId} {
        // A tech can create a proof of work record
        allow create: if isTechnician();
    }

    // Default read access for other collections needed by technicians
    match /infrastructure/{deviceId} {
      allow read: if isTechnician();
    }
     match /connections/{connectionId} {
      allow read: if isTechnician();
    }
     match /alerts/{alertId} {
      allow read: if isTechnician();
    }
    match /materials/{materialId} {
      allow read: if isTechnician();
    }
     match /plans/{planId} {
      allow read: if isTechnician();
    }
  }
}
