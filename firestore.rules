
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    match /users/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow write: if isAdmin();
      
      // Allow user to access their own notifications
      match /notifications/{notificationId} {
        allow read, write, list, delete: if isAuth() && request.auth.uid == userId;
      }
    }

    match /technicians/{techId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if isAuth();
      // Admins can list all tasks. Techs can only list tasks if they are querying by their own tech_id.
      allow list: if isAdmin() || (request.query.where.to_list().size() > 0 && request.query.where.to_list()[0][1] == 'tech_id' && request.query.where.to_list()[0][2] == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
      allow write: if isAdmin();
    }
    
    match /alerts/{alertId} {
        allow read, list: if isAuth();
        allow write: if isAdmin();
    }

    match /materials/{materialId} {
        allow read, list: if isAuth();
        allow write: if isAdmin();
    }

    match /assignments/{assignmentId} {
        allow read: if isAuth();
        allow write, list: if isAdmin();
    }
    
    match /referrals/{referralId} {
        allow read: if isAuth();
        allow write, list: if isAdmin();
    }
    
    match /infrastructure/{infraId} {
        allow read, list: if isAuth();
        allow write: if isAdmin();
    }
    
     match /connections/{connId} {
        allow read, list: if isAuth();
        allow write: if isAdmin();
    }

    match /proofOfWork/{proofId} {
      allow read, list: if isAdmin();
      allow create: if isAuth();
      allow delete: if isAdmin();
    }

    match /settings/live {
        allow read: if isAuth();
        allow write: if isAdmin();
    }

    match /contacts/{contactId} {
      // Allow anyone to submit the form
      allow create;
      // Only admins can read, update, or delete submissions
      allow read, list, update, delete: if isAdmin();
    }
  }
}
