
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isLoggedIn() {
      return request.auth != null;
    }

    function isDataOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isLoggedIn() && getUserRole() == 'Admin';
    }

    function isTechnician() {
      return isLoggedIn() && getUserRole() == 'Technician';
    }

    // Collection Rules
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && isDataOwner(userId));
      allow delete: if isAdmin();
    }

    match /technicians/{techId} {
      allow read: if isLoggedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && request.resource.data.id == techId);
      allow delete: if isAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isLoggedIn();
      allow create: if isAdmin();
      // Allow admin to update anything, allow technician to update only if the task is assigned to them.
      allow update: if isAdmin() || (isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
      allow delete: if isAdmin();
    }
    
    match /alerts/{alertId} {
      allow read: if isLoggedIn();
      // Only Admins (or backend processes with admin credentials) can create, update, or delete alerts.
      allow write: if isAdmin();
    }

    match /infrastructure/{deviceId} {
      allow read: if isLoggedIn();
      // Only Admins can manage the core infrastructure records.
      allow write: if isAdmin();
    }

    match /connections/{connectionId} {
      allow read: if isLoggedIn();
      // Only Admins can manage network connections.
      allow write: if isAdmin();
    }

    match /materials/{materialId} {
      allow read: if isLoggedIn();
      // Only Admins can manage the master materials list.
      allow write: if isAdmin();
    }

    match /assignments/{assignmentId} {
      allow read: if isLoggedIn();
      // Technicians can create (request) assignments, Admins can manage them.
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }

    match /referrals/{referralId} {
      allow read: if isLoggedIn();
      // Technicians can create referrals, Admins can manage them.
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }
    
    match /plans/{planId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }
  }
}
