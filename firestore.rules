
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isTechnician() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
      
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /technicians/{techId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create, delete: if isAdmin();
      // Allow admin to update any technician, allow a technician to update their own document
      allow update: if isAdmin() || (isTechnician() && request.auth.token.userId == techId);
    }

    match /tasks/{taskId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /alerts/{alertId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /infrastructure/{deviceId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /connections/{connectionId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /materials/{materialId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /assignments/{assignmentId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /referrals/{referralId} {
      allow get, list: if request.auth != null;
      allow create: if isTechnician() && request.auth.token.userId == request.resource.data.tech_id;
      allow update, delete: if isAdmin();
    }

    match /settings/live {
      allow read, write: if isAdmin();
    }
    
    match /proofOfWork/{proofId} {
        allow get, list: if isAdmin();
        allow create: if isTechnician();
        allow delete: if isAdmin();
    }
  }
}
