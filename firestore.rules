
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function isTechnician() {
        return isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    // Collection Rules
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
      allow update: if isAdmin() || request.auth.uid == userId;
    }
    
    match /technicians/{techId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
        allow update: if isAdmin() || request.auth.uid == get(/databases/$(database)/documents/users/{techId}).data.uid;
    }
    
    match /tasks/{taskId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id);
    }
    
    match /alerts/{alertId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    match /infrastructure/{deviceId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    match /connections/{connectionId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin() || isTechnician();
    }

    match /referrals/{referralId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin() || isTechnician();
    }

    match /plans/{planId} {
        allow read: if isLoggedIn();
        allow write: if isAdmin();
    }
  }
}
