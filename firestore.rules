
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isLoggedIn() && getUserRole() == 'Admin';
    }

    function isTechnician() {
      return isLoggedIn() && getUserRole() == 'Technician';
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // Admins have full access to all collections. This is the master rule.
    // Specific collections below can grant ADDITIONAL permissions to non-admins.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users can read any user profile (for names, avatars etc.)
    // but can only update their own profile.
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow update: if isOwner(userId);
    }

    // Technicians can update their own technician document (for status, location updates)
    // and all authenticated users can read technician data.
    match /technicians/{techId} {
      allow read: if isLoggedIn();
      // Techs can update their own document. The techId is the custom id, not the UID.
      // We look up the user doc that corresponds to this techId to find the auth UID.
      allow update: if isTechnician() && request.auth.uid == get(/databases/$(database)/documents/users/{request.resource.data.uid}).data.uid;
    }

    // All authenticated users can read tasks.
    // Technicians can update a task if it is assigned to them.
    match /tasks/{taskId} {
      allow read: if isLoggedIn();
      allow update: if isTechnician() && request.resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    // Technicians can create new referrals (customer leads).
    match /referrals/{referralId} {
        allow read: if isLoggedIn();
        allow create: if isTechnician();
    }
    
    // Technicians can create new material requests (assignments).
    match /assignments/{assignmentId} {
        allow read: if isLoggedIn();
        allow create: if isTechnician();
    }

    // Read-only access for technicians to these collections.
    match /alerts/{alertId} {
      allow read: if isLoggedIn();
    }
    
    match /connections/{connectionId} {
      allow read: if isLoggedIn();
    }

    match /infrastructure/{deviceId} {
      allow read: if isLoggedIn();
    }

    match /materials/{materialId} {
      allow read: if isLoggedIn();
    }
    
    match /plans/{planId} {
        allow read: if isLoggedIn();
    }
  }
}
