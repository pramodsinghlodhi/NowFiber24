rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user roles
    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function isTechnician() {
        return isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    // Admins have full access to everything. This is the simplest, most reliable rule.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Technicians access rules
    match /users/{userId} {
        // A technician can read their own user profile and other technicians' profiles
        allow read: if isTechnician();
        // A technician can only update their own user document
        allow update: if isTechnician() && request.auth.uid == userId;
    }

    match /technicians/{techId} {
        // A technician can read all technician data (for map view, etc.)
        allow read: if isTechnician();
        // A technician can only update their own technician document (for status/location updates)
        allow update: if isTechnician() && request.auth.uid == get(/databases/$(database)/documents/users/{techId}).data.uid;
    }

    match /tasks/{taskId} {
        // Technicians can read all tasks
        allow read: if isTechnician();
        // Technicians can only update tasks assigned to them
        allow update: if isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }
    
    match /referrals/{referralId} {
        // Technicians can read their own referrals
        allow read: if isTechnician() && resource.data.tech_id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
        // Technicians can create new referrals
        allow create: if isTechnician();
    }
    
    match /assignments/{assignmentId} {
        // Technicians can read their own assignments
        allow read: if isTechnician() && resource.data.technicianId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
        // Technicians can create new assignments (requests)
        allow create: if isTechnician();
    }

    // Read-only access for technicians to other collections
    match /infrastructure/{deviceId} {
      allow read: if isTechnician();
    }
    match /connections/{connectionId} {
      allow read: if isTechnician();
    }
    match /alerts/{alertId} {
      allow read: if isTechnician();
    }
    match /materials/{materialId} {
      allow read: if isTechnician();
    }
     match /plans/{planId} {
      allow read: if isTechnician();
    }
  }
}
