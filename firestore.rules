
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    match /users/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow write: if isAdmin();
      allow list: if isAdmin();
    }
    
    match /technicians/{techId} {
      allow read, list: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
      allow read, write: if isAuth();
      allow list: if isAdmin() || (request.auth.uid == request.query.where.to_list()[0][2]);
    }
    
    match /alerts/{alertId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }
    
    match /infrastructure/{infraId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }
    
    match /connections/{connId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
      allow read, list: if isAuth();
      allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read, write: if isAuth();
      allow list: if isAdmin() || (request.auth.uid == request.query.where.to_list()[0][2]);
    }
    
    match /referrals/{referralId} {
      allow read, write: if isAuth();
      allow list: if isAdmin() || (request.auth.uid == request.query.where.to_list()[0][2]);
    }
    
     match /proofOfWork/{proofId} {
      allow read, list: if isAdmin();
      allow create: if isAuth();
      allow delete: if isAdmin();
    }
    
    match /settings/live {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /contacts/{contactId} {
      allow read, list: if isAdmin();
      allow create: if true; // Anyone can submit the form
      allow update, delete: if isAdmin();
    }
  }
}
