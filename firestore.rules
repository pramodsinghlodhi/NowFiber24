rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check the role of the requesting user.
    // It safely checks if the user document exists and what their role is.
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return request.auth != null && getUserRole() == 'Admin';
    }

    function isTechnician() {
      return request.auth != null && getUserRole() == 'Technician';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function getTechId() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can manage all user documents
      allow read, write: if isAdmin();
      // Users can read their own document
      allow read: if isOwner(userId);
    }

    // Rules for the 'technicians' collection
    match /technicians/{techId} {
        // Admins can manage all technician documents
        allow read, write: if isAdmin();
        // Technicians can read all technician data (for maps, etc.)
        allow read: if isTechnician();
        // Technicians can update their own document (for location, status)
        allow update: if isTechnician() && techId == getTechId();
    }
    
    // Rules for all other data collections
    match /{collection}/{docId} {
        // Admins have full access to all other collections
        allow read, write: if isAdmin();
    }

    // Specific rules for Technicians on other collections
    match /tasks/{taskId} {
        // Technicians can read all tasks
        allow read: if isTechnician();
        // Technicians can only update tasks assigned to them
        allow update: if isTechnician() && resource.data.tech_id == getTechId();
    }

    match /referrals/{referralId} {
        // Technicians can read their own referrals
        allow read: if isTechnician() && resource.data.tech_id == getTechId();
        // Technicians can create new referrals
        allow create: if isTechnician();
    }

    match /alerts/{alertId} {
        allow read: if isTechnician();
    }

    match /inventory/{inventoryId} {
        allow read: if isTechnician();
    }

    match /materials/{materialId} {
        allow read: if isTechnician();
    }
    
    match /assignments/{assignmentId} {
        // Technicians can read their own material assignments
        allow read: if isTechnician() && resource.data.technicianId == getTechId();
        // Technicians can create new assignments (requests)
        allow create: if isTechnician();
    }

    match /infrastructure/{infraId} {
        allow read: if isTechnician();
    }

    match /connections/{connId} {
        allow read: if isTechnician();
    }
    
     match /plans/{planId} {
        allow read: if isTechnician();
    }
  }
}
