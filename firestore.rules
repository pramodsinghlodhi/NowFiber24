
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an Admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Helper function to check if the user is a Technician
    function isTechnician() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }

    // Allow authenticated users to read their own user profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      // Admins can write to any user profile (e.g., to block them)
      allow write: if isAdmin();
    }
    
    // Allow Admins to read all notifications, but users can only read their own
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Technicians collection can be read by any authenticated user, but only written by Admins.
    match /technicians/{techId} {
      // Any authenticated user can read technician data (for maps, lists, etc.)
      // Technicians can update their own status (lat, lng, isActive, status)
      allow read: if request.auth != null;
      allow update: if (isAdmin() || request.auth.uid == get(/databases/$(database)/documents/users/$(request.resource.data.id)).data.uid);
      allow create, delete: if isAdmin();
    }
    
    // Contacts (from landing page) are readable and writable only by Admins
    match /contacts/{contactId} {
        allow read, write, create, delete: if isAdmin();
    }

    // Referrals can be created by Technicians, but only managed by Admins.
    match /referrals/{referralId} {
      allow read: if request.auth != null;
      allow create: if isTechnician();
      allow update, delete: if isAdmin();
    }

    // Any authenticated user can read data, but only Admins can modify it.
    // This applies to core data collections needed by both roles.
    match /alerts/{alertId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /infrastructure/{infraId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /connections/{connId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
       allow read: if request.auth != null;
       allow create, update, delete: if isAdmin() || isTechnician();
    }
    
    match /materials/{materialId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow create: if isTechnician() || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    match /proofOfWork/{proofId} {
        allow read: if request.auth != null;
        allow create: if isTechnician();
        allow delete: if isAdmin();
    }

    // Admins can read and write settings
    match /settings/live {
        allow read, write: if isAdmin();
    }

  }
}
