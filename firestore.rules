
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function isTechnician() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Technician';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /technicians/{techId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isSignedIn();
      allow update(diff, resource): if (
        (isTechnician() && diff.onlyAffects(['status'])) ||
        (isAdmin() && diff.onlyAffects(['tech_id']))
      );
      allow create, delete: if isAdmin();
    }

    match /alerts/{alertId} {
        allow read: if isSignedIn();
        allow create, write, delete: if isAdmin();
    }
    
    match /infrastructure/{deviceId} {
        allow read: if isSignedIn();
        allow create, write, delete: if isAdmin();
    }
    
    match /connections/{connectionId} {
        allow read: if isSignedIn();
        allow create, write, delete: if isAdmin();
    }

    match /materials/{materialId} {
        allow read: if isSignedIn();
        allow create, write, delete: if isAdmin();
    }

    match /assignments/{assignmentId} {
        allow read: if isSignedIn();
        // Technicians can create requests, admins can update/approve them
        allow create: if isTechnician();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    match /referrals/{referralId} {
        allow read: if isSignedIn();
        allow create: if isTechnician();
        allow update: if isAdmin();
    }
    
     match /plans/{planId} {
        allow read: if isSignedIn();
        allow create, write, delete: if isAdmin();
    }
  }
}
