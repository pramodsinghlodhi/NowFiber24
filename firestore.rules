
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuth() && getUserData().role == 'Admin';
    }
    
    function isTechnician() {
        return isAuth() && getUserData().role == 'Technician';
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins can do anything
    match /{path=**}/documents/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Rules for Technicians
    match /users/{userId} {
        allow read: if isAuth();
        allow update: if isOwner(userId); // Technicians can update their own user doc if needed
    }

    match /technicians/{techId} {
        allow read: if isAuth();
        // A technician can only update their own document, and only if their auth uid matches the document's tech id
        allow update: if isTechnician() && getUserData().id == techId;
    }

    match /tasks/{taskId} {
        allow read: if isAuth();
        // A technician can only update tasks assigned to them
        allow update: if isTechnician() && resource.data.tech_id == getUserData().id;
    }
    
    match /alerts/{alertId} {
        allow read: if isAuth();
    }

    match /infrastructure/{infraId} {
        allow read: if isAuth();
    }
    
    match /connections/{connId} {
        allow read: if isAuth();
    }
    
    match /materials/{materialId} {
        allow read: if isAuth();
    }

    match /assignments/{assignmentId} {
        allow read: if isAuth();
        allow create: if isTechnician(); // Techs can create requests
    }

    match /referrals/{referralId} {
        allow read: if isAuth();
        allow create: if isTechnician();
    }
    
     match /proofOfWork/{proofId} {
        allow read: if isAuth();
        // Techs can only create proof of work for themselves
        allow create: if isTechnician() && request.resource.data.technicianId == getUserData().id;
    }

    match /plans/{planId} {
      allow read: if isAuth();
    }
  }
}
