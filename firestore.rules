rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and ownership
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      if (!isSignedIn()) { return false; }
      return getUserData(request.auth.uid).role == role;
    }
    
    function isAdmin() {
      return isRole('Admin');
    }

    function isTechnician() {
      return isRole('Technician');
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user document.
      // Technicians can read any user document (to see names, etc.).
      // Technicians can only update their OWN user document.
      allow read: if isAdmin() || isTechnician();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && isOwner(userId));
    }

    // Rules for the 'technicians' collection
    match /technicians/{techId} {
      // Admins can read/write any technician document.
      // Technicians can read all technician documents (for map view, etc.).
      // A technician can only update their own document.
      allow read: if isAdmin() || isTechnician();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (isTechnician() && techId == getUserData(request.auth.uid).id);
    }
    
    // Rules for tasks
    match /tasks/{taskId} {
        // Admins can read/write all tasks.
        // Technicians can read all tasks.
        // Technicians can only update tasks assigned to them.
        allow read: if isAdmin() || isTechnician();
        allow create: if isAdmin();
        allow update: if isAdmin() || (isTechnician() && resource.data.tech_id == getUserData(request.auth.uid).id);
        allow delete: if isAdmin();
    }
    
    // Rules for referrals
    match /referrals/{referralId} {
        // Admins can read/write all referrals.
        // Technicians can read their own referrals.
        // Technicians can create new referrals.
        allow read: if isAdmin() || (isTechnician() && resource.data.tech_id == getUserData(request.auth.uid).id);
        allow create: if isTechnician();
        allow update, delete: if isAdmin();
    }
    
     // Rules for assignments
    match /assignments/{assignmentId} {
        // Admins can read/write all assignments.
        // Technicians can read their own assignments.
        // Technicians can create new assignments (requests).
        allow read: if isAdmin() || (isTechnician() && resource.data.technicianId == getUserData(request.auth.uid).id);
        allow create: if isTechnician() || isAdmin();
        allow update, delete: if isAdmin();
    }

    // Default-allow for other collections for Admins, and read-only for Technicians.
    // This covers infrastructure, connections, materials, alerts, etc.
    match /{document=**} {
      allow read: if isAdmin() || isTechnician();
      allow write: if isAdmin();
    }
  }
}
