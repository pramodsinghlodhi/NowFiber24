
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }
    
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
      
      // Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    match /technicians/{techId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isAuth();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /alerts/{alertId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /infrastructure/{deviceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /connections/{connectionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /materials/{materialId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read: if isAuth();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /referrals/{referralId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /proofOfWork/{proofId} {
      allow read: if isAuth();
      allow write: if isAuth(); // Techs can write their own
      allow delete: if isAdmin();
    }

    match /contacts/{contactId} {
        allow create: if true; // Anyone can send a message
        allow read, write, delete: if isAdmin();
    }

    match /settings/live {
        allow read: if isAuth(); // All authenticated users need some settings
        allow write: if isAdmin();
    }
  }
}
